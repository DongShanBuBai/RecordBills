<?xml version="1.0" encoding="UTF-8" ?>
<!--用于mapper数据库连接测试-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lil.maven.dao.mapper.UserLoginMapper">
    <select id="queryAll" resultType="com.lil.maven.pojo.UserLogin">
        select * from userlogin
    </select>

    <insert id="add" parameterType="com.lil.maven.pojo.UserLogin">
        insert into userlogin values (#{username},#{password})
    </insert>

    <select id="queryByName" resultType="com.lil.maven.pojo.UserLogin">
        select * from userlogin where username = #{username}
    </select>

</mapper>
